<Window x:Class="MenuWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuWindow"
        mc:Ignorable="d"
       Title="Лови яйца" Height="450" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1">
            <Label>Игрок: </Label>
            <TextBox x:Name="inputNamePlayer"></TextBox>
            <Button Click="Play_Click">Играть</Button>
            <Button Click="Statistics_Click">Статистика</Button>
            <Button Click="Exit_Click"> Выйти</Button>
        </StackPanel>
    </Grid>
</Window>
