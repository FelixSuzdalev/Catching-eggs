<Window x:Class="Catching_eggs.MainWindow1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Catching_eggs"
        mc:Ignorable="d"
        Title="Лови яйца" Height="450" Width="700">
    <Grid>
        <Canvas Name="field" Focusable="True" Background="Black" KeyDown="field_KeyDown" KeyUp="field_KeyUp">

            <Rectangle Name="basket" Height="50" Width="70" Fill="Yellow" Canvas.Left="320" Canvas.Top="374" HorizontalAlignment ="Center"/>
            <Label x:Name="playerName" Content="Игрок:" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Canvas.Left="10" VerticalAlignment="Center" />
            <Label x:Name="score" Content="Счет: 0" FontSize="18" FontWeight="Bold" Foreground="White" HorizontalAlignment="Left" Canvas.Left="10" VerticalAlignment="Center" Canvas.Top="34"/>
            <Label x:Name="attempt" Content="Попытки: 3" FontSize="18" FontWeight="Bold" Foreground="White" Canvas.Left="10" HorizontalAlignment="Left" VerticalAlignment="Top" Canvas.Top="64" />

        </Canvas>
    </Grid>
</Window>
